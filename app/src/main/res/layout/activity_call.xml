<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".CallActivity">
    <TextView
        android:id="@+id/hiusertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Hi User"
        android:textSize="18sp"
        android:textColor="#0091EA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>
    <TextView
        android:id="@+id/letsstartcall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Let's Start Call"
        android:textSize="18sp"
        android:textColor="#0091EA"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:fontFamily="monospace"
        android:textStyle="bold"
        android:layout_marginTop="8dp"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginHorizontal="40dp">
       <EditText
           android:id="@+id/user_id_edittext"
           android:layout_width="match_parent"
           android:layout_height="42dp"
           android:layout_marginStart="5dp"




           android:layout_marginTop="32dp"
           android:hint="to call?"
           android:padding="2dp"
            android:layout_toLeftOf="@id/videocallbtn"
           android:background="@drawable/edit_text_bg"
           android:textColor="#0091EA"
           android:layout_centerVertical="true"
           />
       <com.zegocloud.uikit.prebuilt.call.invite.widget.ZegoSendCallInvitationButton
           android:layout_width="48dp"
           android:layout_height="48dp"
           android:id="@+id/voicecallbtn"
           android:layout_centerVertical="true"
           android:layout_toLeftOf="@id/videocallbtn"
           android:layout_marginHorizontal="10dp"
           />
       <com.zegocloud.uikit.prebuilt.call.invite.widget.ZegoSendCallInvitationButton
           android:layout_width="48dp"
           android:layout_height="48dp"
           android:id="@+id/videocallbtn"
           android:layout_centerVertical="true"
           android:layout_marginHorizontal="10dp"

           android:layout_alignParentEnd="true"/>
   </RelativeLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:padding="16dp">

    <ImageView
        android:id="@+id/icon_camera"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/ic_baseline_video_chat_24"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        app:tint="#0091EA" />

    <TextView
        android:id="@+id/videocall_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_camera"
        android:layout_centerHorizontal="true"
        android:text="Video Call"
        android:textSize="24sp"

        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/lets_get_started_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/videocall_text"
        android:layout_centerHorizontal="true"
        android:text="Let's Get Started"
        android:textSize="18sp"

        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/user_id_edittext"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/lets_get_started_text"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:hint="Enter User ID"
        android:padding="2dp"
        android:background="@drawable/edit_text_bg"
        android:textColor="#0091EA"
        />

    <Button
        android:id="@+id/start_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_id_edittext"
        android:layout_marginTop="32dp"
        android:text="Start"
        android:backgroundTint="#0091EA"
        android:textColor="#FFFFFF"
        android:background="@drawable/edit_text_bg"

       />

</RelativeLayout>
